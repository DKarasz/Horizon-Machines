<Defs>
  <ThingDef ParentName="MechCenturion">
	<defName>TitanMech_Centurion</defName>
	<label>Titan Centurion</label>
	<thingClass>Horizon.MechSuit</thingClass>
	<comps>
		<li Class="CompProperties_BladelinkWeapon">
			<biocodeOnEquip>true</biocodeOnEquip>
		</li>
		<li Class="CompProperties_GeneratedName">
			<nameMaker>NamerWeaponBladelink</nameMaker>
		</li>
	</comps>
	<modExtensions>
		<li Class="Horizon.MechExtension">
			<canDraftRemote>true</canDraftRemote>
			<renderPawn>true</renderPawn>
			<exposedPawn>.5</exposedPawn>
			<graphicData>
				<drawOffset>(1,1,1)</drawOffset>
			</graphicData>
		</li>
	</modExtensions>
  </ThingDef>
  <PawnKindDef ParentName="MechCenturionKind">
	<defName>TitanMech_Centurion</defName>
	<race>TitanMech_Centurion</race>
  </PawnKindDef>
  
  <ThingDef ParentName="MechCenturion">
	<defName>EvaMech_Centurion</defName>
	<label>Eva Centurion</label>
	<race>
		<body inherit="false">Human</body>
		<bloodDef inherit="false">Filth_Blood</bloodDef>
	</race>
	<modExtensions>
		<li Class="Horizon.MechExtension">
			<canBleed>true</canBleed>
			<canDraftRemote>false</canDraftRemote>
			<overseerOnly>true</overseerOnly>
			<exposedPawn>.5</exposedPawn>
		</li>
	</modExtensions>
	<recipes>
		<li>ExciseCarcinoma</li>
		<li>AdministerMechSerumHealer</li>
		<li>RemoveBodyPart</li>
		<li>Euthanize</li>
		<li>Anesthetize</li>
		<li>CureScaria</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">Vasectomy</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">ReverseVasectomy</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">TubalLigation</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">ExtractOvum</li>
		<li MayRequire="Ludeon.RimWorld.Royalty">CureBloodRot</li>
		<li MayRequire="Ludeon.RimWorld.Royalty">CureAbasia</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">ExtractHemogenPack</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">BloodTransfusion</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">ImplantXenogerm</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">ImplantIUD</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">RemoveIUD</li>
		<li MayRequire="Ludeon.RimWorld.Biotech">TerminatePregnancy</li>
	</recipes>
	<thingClass>Horizon.MechSuit</thingClass>
  </ThingDef>
  <PawnKindDef ParentName="MechCenturionKind">
	<defName>EvaMech_Centurion</defName>
	<race>EvaMech_Centurion</race>
  </PawnKindDef>
  
